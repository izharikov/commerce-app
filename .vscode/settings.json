{
    "editor.fontSize": 13,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        ".idea" : true,
        "**/bin" : true,
        "**/obj" : true
    },
    "editor.tabSize": 4,
    "editor.mouseWheelZoom": false,
    "search.exclude": {
        "**/node_modules" : true
    },
    "json.format.enable": true,
    "javascript.validate.enable": true
}